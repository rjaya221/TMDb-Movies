{
    "roots": ["lib/"],
    "verbose": false,
    "testURL": "http://localhost/",
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageReporters": ["json", "lcov", "text", "text-summary"],
    "collectCoverageFrom": [
      "lib/**/**",
      "!lib/styles/**",
      "lib/utils/**",
      "!**/*.spec.*",
      "!**/*.stories.*",
      "!**/*.style.*",
      "!**/__snapshots__/**",
      "!**/index.js",
      "!**/*-ignore.js",
      "!**/mock-server-client/**",
      "!**/constants/**",
      "!**/json/**/*.js",
      "!**/mocks/**/*.js"
    ],
    "coveragePathIgnorePatterns": ["/build/"],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
  
    "moduleFileExtensions": ["js", "jsx"],
    "moduleNameMapper": {
        "^/src/(.*)": "<rootDir>/lib/components/$1",

      }
  }